{
  "name": "samlify-libxmljs",
  "version": "1.0.1",
  "description": "Samlify validator module powered by libxmljs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "samlify",
    "validation",
    "validator",
    "saml"
  ],
  "scripts": {
    "build": "tsc && npm run copy",
    "copy": "cpr src/schemas build/schemas -d",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "author": "Tom Kirchjunger <tom.kirchjunger@topicus.nl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/takirchjunger/samlify-libxmljs"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "libxmljs": "^0.19.5"
  },
  "devDependencies": {
    "@types/libxmljs": "^0.18.3",
    "@types/node": "^12.0.4",
    "cpr": "^3.0.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  }
}
